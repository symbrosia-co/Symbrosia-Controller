<!--

  Modbus Monitor  Configuration File

  - Monitor a list of logfiles for recent activity
  - Restart stoppped processes if needed
  - Provide a dashboard of data server health

  Symbrosia Inc

  29Nov2021 A. Cooper
  - initial version
-->

<configuration>
  <scanInterval>1</scanInterval>
  <logInterval>300</logInterval>
  <logName>Household</logName>
  <device>
    <name>Weather</name>
    <ipAddr>192.168.9.202</ipAddr>
    <port>502</port>
    <type>SyCtrl Mk2</type>
    <datum>
      <name>Outdoor Temp</name>
      <addr>22</addr>
      <type>float</type>
      <unit>°C</unit>
      <precision>2</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Soil Temp</name>
      <addr>24</addr>
      <type>float</type>
      <unit>°C</unit>
      <precision>2</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Humidity</name>
      <addr>28</addr>
      <type>float</type>
      <unit>%</unit>
      <precision>1</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Rain Gauge</name>
      <addr>151</addr>
      <type>long</type>
      <unit></unit>
      <log>True</log>
    </datum>
    <datum>
      <name>Solar Flux</name>
      <addr>20</addr>
      <type>float</type>
      <unit>mol/m²/sec</unit>
      <precision>1</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Supply Voltage</name>
      <addr>32</addr>
      <type>float</type>
      <unit>V</unit>
      <precision>1</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Cabinet Temp</name>
      <addr>30</addr>
      <type>float</type>
      <unit>°C</unit>
      <precision>1</precision>
      <log>True</log>
    </datum>
  </device>
  <device>
    <name>Water</name>
    <ipAddr>192.168.9.208</ipAddr>
    <port>502</port>
    <type>SyCtrl Mk2</type>
    <datum>
      <name>North Temp</name>
      <addr>22</addr>
      <type>float</type>
      <unit>°C</unit>
      <precision>2</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Water Pressure</name>
      <addr>26</addr>
      <type>float</type>
      <unit>PSI</unit>
      <precision>1</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>Irrigation Enable</name>
      <addr>9</addr>
      <type>coil</type>
      <log>True</log>
    </datum>
    <datum>
      <name>Front Zone</name>
      <addr>10</addr>
      <type>coil</type>
      <log>True</log>
    </datum>
    <datum>
      <name>Herb Zone</name>
      <addr>11</addr>
      <type>coil</type>
      <log>True</log>
    </datum>
    <datum>
      <name>Veggie Zone</name>
      <addr>12</addr>
      <type>coil</type>
      <log>True</log>
    </datum>
  </device>
</configuration>