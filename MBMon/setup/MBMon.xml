<configuration>
  <scanInterval>1</scanInterval>
  <logInterval>120</logInterval>
  <logName>PBRFlow</logName>
  <device>
    <name>PBR Flow</name>
    <ipAddr>192.168.0.100</ipAddr>
    <port>502</port>
    <datum>
      <name>PBR Flow Gauge</name>
      <addr>151</addr>
      <type>long</type>
      <unit></unit>
      <log>True</log>
    </datum>
  </device>
  <device>
    <name>Blower Monitor</name>
    <ipAddr>192.168.0.105</ipAddr>
    <port>502</port>
    <datum>
      <name>Ambient Temp</name>
      <addr>22</addr>
      <type>float</type>
      <unit>°C</unit>
      <precision>2</precision>
      <log>True</log>
    </datum>
    <datum>
      <name>VFD Temp</name>
      <addr>24</addr>
      <type>float</type>
      <unit>°C</unit>
      <precision>2</precision>
      <log>True</log>
    </datum>
  </device>
</configuration>
